<Window x:Class="BimToMode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BimToMode"
        mc:Ignorable="d"
        Title="Scan to BIM" 
        Height="407" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Grid Margin="30,30,30,7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" 
                Background="#FF0696D7" 
                Padding="20"
                CornerRadius="5"
                Margin="0,0,0,30">
            <TextBlock Text="Scan to BIM - Détection de Murs" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Zone centrale -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Lancez l'analyse du nuage de points" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Foreground="#666666"
                       Margin="0,0,0,20"/>

            <Button x:Name="btnExecutePython" 
                    Content="🔍 Lancer l'Interface Python" 
                    Width="220" 
                    Height="50"
                    Click="ExecutePythonButton_Click"
                    Background="#FF0696D7"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="16"
                    FontWeight="Bold"
                    Margin="0,0,0,15"/>

            <Button x:Name="btnSuivant" 
                    Content="➡️ Suivant (Importer les résultats)" 
                    Width="220" 
                    Height="50"
                    Click="SuivantButton_Click"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Bouton fermer -->
        <Button Grid.Row="2" 
                Content="Fermer" 
                Width="100" 
                Height="35"
                Click="CloseButton_Click"
                Background="#E0E0E0"
                Foreground="#333333"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Right"/>
    </Grid>
</Window>